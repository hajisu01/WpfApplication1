<Window x:Class="WpfApplication1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="LoginForm" Height="192" Width="205">
    <Grid>
        <Label Content="ID:" Height="28" HorizontalAlignment="Left" Margin="20,14,0,0" Name="label1" VerticalAlignment="Top" />
        <TextBox Height="23" HorizontalAlignment="Left" Margin="50,16,0,0" Name="txt_id" VerticalAlignment="Top" Width="120" />
        <Label Content="PW:" Height="28" HorizontalAlignment="Left" Margin="20,43,0,0" Name="label2" VerticalAlignment="Top" />
        <TextBox Height="23" HorizontalAlignment="Left" Margin="50,45,0,0" Name="txt_pw" VerticalAlignment="Top" Width="120" />
        <Button Content="Login" Height="23" HorizontalAlignment="Left" Margin="20,85,0,0" Name="btn_login" VerticalAlignment="Top" Width="150" Click="btn_login_Click" />
        <Button Content="Join" Height="23" HorizontalAlignment="Left" Margin="20,114,0,0" Name="btn_join" VerticalAlignment="Top" Width="150" Click="btn_join_Click" />
    </Grid>
</Window>
